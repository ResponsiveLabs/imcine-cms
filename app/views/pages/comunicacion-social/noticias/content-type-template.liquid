<!DOCTYPE html>
<html class="">
<head>
  {% include 'head' %}
</head>
<body>

<div class="panels ">
  <div class="panel panel-left">
  </div>
</div>

<div class="panel-content">
  <div class="all-site">
    
    <!-- Header -->
      {% include 'header' %}
    <!-- final Header -->

    <div class="container-center">
      <div class="row">
        <div class=" row col-9 content">
          <div class="row col-12 info-noticias">
            
            <!-- Breadcrumb -->
			{% include 'page-breadcrumb' %}

            <!-- Título e Imagen Destacada -->
            <div class="row col-5 datos-noticias">
              <strong>{{ noticia.titulo }}</strong>
              <p class="light">{{ noticia.fecha_de_publicacion | localized_date: '%d/%m/%Y'}}</p>
              <p class="light"> <!-- Actualización --> </p><br>
              <h6>{{ noticia.descripcion }}</h6>
              <p><!-- Fuente --></p><br>
              <a href=""><!-- INFORMACIÓN RELACIONADA --></a>
            </div><!--finall row col-5 datos-noticias-->

            <div class="row col-6 imagen">
              <img src="{{ noticia.imagen_destacada_url }}" class="img">
              <p></p>
            </div><!--finall row col-6 imagen-->
          </div><!--finall row info-noticias-->
          
          <div class="row col-12 info-article">
            {{ noticia.texto}}
          </div>
          
        </div>
			                        
        <!-- Sidebar Portada de Sección -->
        <div class="row col-3" id="sidebar-page">
		{% include 'sidebar-comunicacion-social' %}
          
          
         
        </div><!--finall col-3-->
      </div><!--finall -row-->
    </div><!--finall container-center-->

    <!-- Footer -->
	    {% include 'footer' %}
    <!-- final Footer -->
  </div><!--final all-site-->
</div><!--finall panel-content-->

</body>
</html>