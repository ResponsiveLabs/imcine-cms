{% paginate contents.noticias by 10 %}
	{% for noticia in paginate.collection %}
	<div class="row col-12 noticia-one">
      <div class="row col-5 noticia-img">
        <img src="{{ noticia.imagen_destacada_url }}" class="img">
      </div>
      <div class="row col-7 noticia-info">
        <strong>
          {{ noticia.titulo}}
        </strong>
        <p id="link">
          {{ noticia.fecha_de_publicacion | localized_date: '%d/%m/%Y'}}
        </p>
        <p class="light">
          {{ noticia.descripcion}}
        </p>
        {{ link_to noticia }}
        <a href="comunicacion-social/noticias/{{ noticia._permalink }}">VER M√ÅS</a>
      </div>
	</div><!--finall row col-12 noticia-one-->

	<div class="row col-12 divider"></div>
	{% endfor %}
{{ paginate | default_pagination: 'previous_label:Anterior', 'next_label:Siguiente' }}
{% endpaginate %}
